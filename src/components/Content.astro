---
// src/components/Content.astro
import { work } from "../cv.json";
---

<section class="content-section">
  <div class="content-container">
    <h2 class="content-title">Experiencia Profesional</h2>
    <p class="content-subtitle">Mi trayectoria y contribuciones en el ámbito del desarrollo de software</p>
    
    <div class="experience-grid">
      {
        work.map(
          ({ name, startDate, endDate, position, summary, highlights, url }) => {
            const startYear = new Date(startDate).getFullYear();
            const endYear = endDate != null ? new Date(endDate).getFullYear() : "Actual";
            const years = `${startYear} - ${endYear}`;
            
            return (
              <article class="experience-card">
                <div class="card-header">
                  <div class="company-info">
                    <h3 class="company-name">
                      {url ? (
                        <a href={url} target="_blank" rel="noopener noreferrer">
                          {name}
                        </a>
                      ) : (
                        <span>{name}</span>
                      )}
                    </h3>
                    <h4 class="position-title">{position}</h4>
                  </div>
                  <div class="time-badge">{years}</div>
                </div>
                
                <div class="card-body">
                  <p class="job-summary">{summary}</p>
                  
                  {highlights && highlights.length > 0 && (
                    <div class="highlights-section">
                      <h5>Logros Principales:</h5>
                      <ul class="highlights-list">
                        {highlights.map((highlight) => (
                          <li class="highlight-item">{highlight}</li>
                        ))}
                      </ul>
                    </div>
                  )}
                </div>
                
                <div class="card-footer">
                  <div class="skills-tags">
                    <span class="skill-tag">Desarrollo</span>
                    <span class="skill-tag">Software</span>
                    <span class="skill-tag">Ingeniería</span>
                  </div>
                </div>
              </article>
            );
          }
        )
      }
    </div>
  </div>
</section>

<style>
  :root {
    --primary: #ED9954;
    --secondary: #F4AC5C;
    --accent: #CC8494;
    --dark: #504447;
    --darker: #524752;
    --neutral: #976465;
    --light: #f8f9fa;
  }
  
  .content-section {
    padding: 3rem 1.5rem;
    background: linear-gradient(to bottom, #ffffff, #fafafa);
    min-height: 100vh;
  }
  
  .content-container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .content-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--darker);
    text-align: center;
    margin-bottom: 0.75rem;
    position: relative;
  }
  
  .content-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: var(--primary);
    border-radius: 2px;
  }
  
  .content-subtitle {
    text-align: center;
    color: var(--dark);
    font-size: 1.1rem;
    margin-bottom: 3rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }
  
  .experience-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
  }
  
  .experience-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    border-top: 4px solid var(--primary);
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  
  .experience-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.12);
  }
  
  .card-header {
    padding: 1.5rem 1.5rem 1rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
  }
  
  .company-info {
    flex: 1;
  }
  
  .company-name {
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--darker);
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }
  
  .company-name a {
    color: inherit;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .company-name a:hover {
    color: var(--primary);
  }
  
  .position-title {
    font-size: 1rem;
    font-weight: 500;
    color: var(--primary);
    margin: 0;
  }
  
  .time-badge {
    background: var(--secondary);
    color: white;
    padding: 0.35rem 0.75rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 500;
    flex-shrink: 0;
  }
  
  .card-body {
    padding: 1.5rem;
    flex: 1;
  }
  
  .job-summary {
    color: var(--dark);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }
  
  .highlights-section h5 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--darker);
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
  }
  
  .highlights-section h5::before {
    content: '';
    display: inline-block;
    width: 12px;
    height: 12px;
    background: var(--accent);
    border-radius: 50%;
    margin-right: 0.5rem;
  }
  
  .highlights-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .highlight-item {
    position: relative;
    padding-left: 1.25rem;
    margin-bottom: 0.6rem;
    line-height: 1.5;
    color: var(--dark);
  }
  
  .highlight-item::before {
    content: "•";
    position: absolute;
    left: 0;
    color: var(--accent);
    font-weight: bold;
    font-size: 1.2rem;
  }
  
  .card-footer {
    padding: 1rem 1.5rem;
    background: rgba(0, 0, 0, 0.02);
    border-top: 1px solid rgba(0, 0, 0, 0.05);
  }
  
  .skills-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .skill-tag {
    background: rgba(237, 153, 84, 0.15);
    color: var(--primary);
    padding: 0.3rem 0.7rem;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 500;
  }
  
  /* Responsive Design */
  @media (max-width: 900px) {
    .experience-grid {
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 1.5rem;
    }
  }
  
  @media (max-width: 768px) {
    .content-section {
      padding: 2rem 1rem;
    }
    
    .content-title {
      font-size: 2rem;
    }
    
    .card-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }
    
    .time-badge {
      align-self: flex-start;
    }
  }
  
  @media (max-width: 480px) {
    .experience-grid {
      grid-template-columns: 1fr;
    }
    
    .content-title {
      font-size: 1.75rem;
    }
    
    .content-subtitle {
      font-size: 1rem;
    }
    
    .card-body, .card-header {
      padding: 1.25rem;
    }
  }
</style>