---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';
---
<footer class="footer">
  <div class="footer-container">
    <div class="footer-left">
      <p class="footer-brand">
        Made with Colombia <span class="year-tag">2025</span>
      </p>
      <span class="footer-meta">
        @JuanFV6 â€”
        <a href="https://github.com/withastro/astro" target="_blank" rel="noopener noreferrer">
          GitHub
        </a>
      </span>
    </div>

    <div class="footer-right">
      <h5 class="footer-author">
        Juan Felipe Vidal
      </h5>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: #f4f4f4;
    padding: 1rem 1.5rem;
    font-family: 'Inter', sans-serif;
    border-top: 1px solid #ddd;
  }

  .footer-container {
    max-width: 960px;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .footer-left {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .footer-brand {
    font-size: 1.125rem;
    font-weight: 500;
    color: #333;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .year-tag {
    background-color: #e63946;
    color: #fff;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.95rem;
  }

  .footer-meta {
    font-size: 0.85rem;
    color: #666;
    text-transform: uppercase;
  }

  .footer-meta a {
    color: #0077cc;
    text-decoration: none;
  }

  .footer-meta a:hover {
    text-decoration: underline;
  }

  .footer-right {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .footer-author {
    font-size: 1rem;
    font-weight: 600;
    color: #222;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-transform: uppercase;
  }

  .logo-img {
    height: 32px;
    opacity: 0.85;
    transition: opacity 0.2s ease;
  }

  .logo-img:hover {
    opacity: 1;
  }
</style>
