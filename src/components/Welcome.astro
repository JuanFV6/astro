---
import '../styles/global.css';
---

<section class="welcome-section">
  <div class="container">
    <div class="welcome-content">
      <h1 class="welcome-title">Bienvenido a mi sitio con Astro</h1>
      <p class="welcome-description">
        Este es un sitio web construido con Astro. Juan Vidal.
      </p>
      <div class="welcome-actions">
        <a href="/projects" class="button button-primary">Ver Proyectos</a>
        <a href="/contact" class="button button-secondary">Contactar</a>
      </div>
    </div>
  </div>
</section>

<style>
  .welcome-section {
    padding: var(--spacing-xxl) 0;
    background: linear-gradient(135deg, var(--color-light) 0%, var(--color-white) 100%);
    text-align: center;
  }
  
  .welcome-content {
    max-width: 600px;
    margin: 0 auto;
  }
  
  .welcome-title {
    color: var(--color-darker);
    margin-bottom: var(--spacing-lg);
  }
  
  .welcome-description {
    color: var(--color-dark);
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-xl);
  }
  
  .welcome-actions {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
  }
  
  @media (max-width: 768px) {
    .welcome-section {
      padding: var(--spacing-xl) 0;
    }
    
    .welcome-actions {
      flex-direction: column;
      align-items: center;
    }
  }
</style>