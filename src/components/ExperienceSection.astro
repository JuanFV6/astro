---
import '../styles/global.css';
import { work } from "../data/cv.json";

// Utilidad para formatear fechas
const formatDateRange = (startDate, endDate) => {
  const startYear = new Date(startDate).getFullYear();
  const endYear = endDate ? new Date(endDate).getFullYear() : 'Actual';
  return `${startYear} - ${endYear}`;
};
---

<section class="experience-section">
  <div class="container">
    <h2 class="section-title">Experiencia Profesional</h2>
    <p class="section-description">
      Mi trayectoria y contribuciones en el desarrollo de software
    </p>
    
    <div class="experience-grid">
      {work.map((item) => (
        <article class="experience-card">
          <div class="card-header">
            <div class="company-info">
              <h3 class="company-name">
                {item.url ? (
                  <a href={item.url} target="_blank" rel="noopener noreferrer">
                    {item.name}
                  </a>
                ) : (
                  <span>{item.name}</span>
                )}
              </h3>
              <h4 class="position-title">{item.position}</h4>
            </div>
            <div class="time-badge">{formatDateRange(item.startDate, item.endDate)}</div>
          </div>
          
          <div class="card-body">
            <p class="job-summary">{item.summary}</p>
            
            {item.highlights && item.highlights.length > 0 && (
              <div class="highlights">
                <h5>Logros y Responsabilidades:</h5>
                <ul class="highlight-list">
                  {item.highlights.map(highlight => (
                    <li class="highlight-item">{highlight}</li>
                  ))}
                </ul>
              </div>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .experience-section {
    padding: var(--spacing-xxl) 0;
    background-color: var(--color-white);
  }
  
  .section-title {
    text-align: center;
    color: var(--color-darker);
    margin-bottom: var(--spacing-sm);
  }
  
  .section-description {
    text-align: center;
    color: var(--color-dark);
    margin-bottom: var(--spacing-xl);
  }
  
  .experience-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--spacing-lg);
  }
  
  .experience-card {
    background: var(--color-white);
    border-radius: var(--border-radius-lg);
    padding: var(--spacing-lg);
    box-shadow: var(--shadow-md);
    border-left: 4px solid var(--color-primary);
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
  }
  
  .experience-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--spacing-md);
    gap: var(--spacing-md);
  }
  
  .company-name {
    color: var(--color-darker);
    margin-bottom: var(--spacing-xs);
  }
  
  .company-name a {
    color: inherit;
  }
  
  .company-name a:hover {
    color: var(--color-primary);
  }
  
  .position-title {
    color: var(--color-primary);
    font-size: var(--font-size-base);
    margin: 0;
  }
  
  .time-badge {
    background: var(--color-primary-light);
    color: var(--color-white);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: 20px;
    font-size: var(--font-size-sm);
    font-weight: 500;
    flex-shrink: 0;
  }
  
  .job-summary {
    color: var(--color-dark);
    margin-bottom: var(--spacing-md);
  }
  
  .highlights h5 {
    color: var(--color-darker);
    margin-bottom: var(--spacing-sm);
    font-size: var(--font-size-base);
  }
  
  .highlight-list {
    list-style: none;
  }
  
  .highlight-item {
    position: relative;
    padding-left: var(--spacing-md);
    margin-bottom: var(--spacing-xs);
    color: var(--color-dark);
  }
  
  .highlight-item::before {
    content: "â€¢";
    color: var(--color-primary);
    font-weight: bold;
    position: absolute;
    left: 0;
  }
  
  @media (max-width: 768px) {
    .experience-grid {
      grid-template-columns: 1fr;
    }
    
    .card-header {
      flex-direction: column;
    }
  }
</style>